#!/bin/bash
#

#
if [ $# -lt 1 ]; then
    echo "usage ... "$0" target_dir  [num_fac]"
    exit 1
fi

T_DIR="$1"
N_FAC="$2"

FLS=`find $T_DIR -type f -name "*.ipynb" 2>/dev/null | grep -v "\/\."`

IFS=$'\n'
if [ "$FLS" != "" ]; then
    for FL in $FLS ; do
        echo "setup ... "$FL
        /usr/bin/ipynb_conv  $FL $FL $N_FAC
    done
fi

