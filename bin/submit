#!/bin/bash
#

SBT=`echo $NB_SUBMITS | awk -F" " '{print $1}'`

DST=`echo $SBT | awk -F":" '{print $1}'`
LNK=`echo $SBT | awk -F":" '{print $2}'`
if [ "$DST" = "" ] ; then 
    exit
fi

if [ -d ../../${DST} ]; then
    USR=`whoami`
    IFS=$'\n'
    FLS=`ls`
    #
    for FL in $FLS; do
        if [ ! -d $FL ]; then
            echo "copying ...  $FL ../${LNK}/${USR}_${FL}"
            cp                 $FL ../../${DST}/${USR}_${FL}
        fi
    done
fi

